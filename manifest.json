{
    "manifest_version": 3,
    "name": "Bloco de Notas Integrado",
    "version": "1.0",
    "description": "Uma extens√£o de bloco de notas simples e integrada para o Google Chrome.",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icons16.png",
            "48": "icons/icons48.png",
            "128": "icons/icons128.png"
        }
    },
    "icons": {
        "16": "icons/icons16.png",
        "48": "icons/icons48.png",
        "128": "icons/icons128.png"
    },
    "options_page": "options.html",
    "author": "Daniel Ramos",
    "offline_enabled": true
}
